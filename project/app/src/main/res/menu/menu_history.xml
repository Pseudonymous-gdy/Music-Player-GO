<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <item
        android:id="@+id/action_search"
        android:icon="@drawable/ic_search"
        android:title=""
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="collapseActionView|always"
        tools:ignore="AlwaysShowAction" />

    <item
        android:id="@+id/sleeptimer"
        android:icon="@drawable/ic_sleeptimer"
        android:title="@string/sleeptimer"
        app:showAsAction="always"
        tools:ignore="AlwaysShowAction" />

    <group
        android:id="@+id/history_curated"
        android:checkableBehavior="single">

        <item
            android:id="@+id/action_top_frequent"
            android:title="@string/history_playlist_frequent"
            android:checkable="true"
            app:showAsAction="ifRoom" />
    </group>

    <item
        android:id="@+id/action_clear_history"
        android:title="@string/history_clear"
        app:showAsAction="never" />

    <group android:id="@+id/sorting">

        <item
            android:id="@+id/default_sorting"
            android:orderInCategory="0"
            android:title="@string/history_sort_recent"
            app:showAsAction="never" />

        <item
            android:id="@+id/ascending_sorting"
            android:orderInCategory="1"
            android:title="@string/history_sort_title_asc"
            app:showAsAction="never" />

        <item
            android:id="@+id/descending_sorting"
            android:orderInCategory="2"
            android:title="@string/history_sort_title_desc"
            app:showAsAction="never" />

        <item
            android:id="@+id/date_added_sorting"
            android:orderInCategory="5"
            android:title="@string/history_sort_oldest"
            app:showAsAction="never" />

    </group>

</menu>
